<%= simple_form_for :search, method: :get do |f| %>
  <div class="row mb-2">
    <div class="col col-md-4">
      <%= f.input :search_query, input_html: {class: "form-control"}, required: false ,label: "Search"  %>
    </div>
    <div class="col col-md-4">
      <%= f.input :social_network, as: :select, collection: @search.social_networks_options, required: false, label: "Network",input_html: {class: 'form-control chosen-select', multiple: false}, :include_blank => ""%>
    </div>
  </div>
  <div class="row pull-right">
    <div class="col">
      <%= f.button :submit, "Go", class: "btn btn-success" %>
      <%= link_to "Clear", calendar_content_items_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
